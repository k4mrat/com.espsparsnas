{
  "id": "com.espsparsnas",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "EspSparsnas"
  },
  "description": {
    "en": "Power usage from Sparsnas (Ikea)"
  },
  "category": [
    "appliances"
  ],
  "permissions": [
    "homey:app:nl.scanno.mqtt"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Anton Delitsch",
    "email": "anton@trugen.net"
  },
  "drivers": [
    {
      "id": "espsparsnas",
      "name": {
        "en": "EspSparsnas"
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "meter_power",
        "measure_power"
      ],
      "energy": {
        "batteries": [
          "AAA",
          "AAA"
        ]
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/espsparsnas/assets/images/large.png",
        "small": "/drivers/espsparsnas/assets/images/small.png"
      }
    }
  ]
}